@using System.Linq
@using Microsoft.CodeAnalysis.CSharp.Syntax
@using TherapyQualityController.Models
@model TherapyQualityController.Models.ViewModels.QuestionnaireViewModel

@{
    ViewData["Title"] = "Zarządzanie pytaniami";
}

<h1>@Model.Name</h1>

<div class="container">
    
    <div class="row">
        <h3 style="margin-bottom: 50px">Liczba pytań: @Model.Fields.Count.ToString()</h3>
    </div>
    

    @if (Model.Fields.Count > 0)
    {
        
            @foreach (var item in Model.Fields)
            {
                <div class="row">
                    <div class="media">
                        <div class="media-body">
                            <h4 class="mt-0">@item.Question</h4>
                            
                            @foreach (var answer in item.Answers)
                            {
                                <h5> - @answer.Content (@answer.Value)</h5>
                            }

                            <small><a asp-action="RemoveQuestionFromQuestionnaire" asp-route-id="@item.QuestionId" class="btn btn-danger btn-sm" role="button" style="margin-top: 10px">Usuń pytanie</a></small>
                        </div>
                    </div>
                </div>
                <hr>
            }
        
    }


