@using System.Linq
@model TherapyQualityController.Models.QuestionnaireViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Name</h1>

<div class="container">
    <div class="row">
        <h3>Liczba pytań: @Model.Fields.Count.ToString()</h3>
    </div>
    <hr>
    <div class="row" id="answers">
        <form asp-action="SendAnswers" method="post">
            @foreach (var item in Model.Fields)
            {
                <div class="media">

                    <div class="media-body">

                        <div>
                            <h5 class="mt-0">@item.Question.Contents</h5>
                        </div>

                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name=@($"opt{item.Count}") id="inlineRadio1" value="1">
                                <label class="form-check-label" for="inlineRadio1">1</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name=@($"opt{item.Count}") id="inlineRadio2" value="2">
                                <label class="form-check-label" for="inlineRadio2">2</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name=@($"opt{item.Count}") id="inlineRadio3" value="3">
                                <label class="form-check-label" for="inlineRadio3">3</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name=@($"opt{item.Count}") id="inlineRadio4" value="4">
                                <label class="form-check-label" for="inlineRadio4">4</label>
                            </div>
                        </div>


                    </div>


                </div>
                <hr>
            }
            <a class="btn btn-dark btn-lg" role="button" style="margin-top: 10px; color: white">Prześlij ankietę</a>
        </form>
    </div>

</div>
