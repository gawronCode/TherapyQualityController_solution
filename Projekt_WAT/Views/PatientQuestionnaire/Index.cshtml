@using System.Linq
@model IEnumerable<TherapyQualityController.Models.ViewModels.QuestionnaireViewModel>

@{
    ViewData["Title"] = "Index";
}


@if(Model.Count()>0){
    <div class="container">
        <div class="row">
            <h1>Liczba dostępnych do rozwiązania ankiet @Model.Count().ToString() </h1>
        </div>
        <div class="row" style="margin-bottom: 30px">
            <h3>Spis ankiet:</h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="row">
                <div class="media">
                    <div class="media-body">
                        <h4 class="mt-0">@item.Name</h4>
                        <small><a asp-action="FillQuestionnaire" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" role="button" style="margin-top: 10px">Rozwiąż ankietę</a></small>
                    </div>
                </div>
            </div>
            <hr>
        }
        
    </div>
}
else
{
    <h1>W tym momencie nie ma żadnych ankiet do wypełnienia</h1>
}
